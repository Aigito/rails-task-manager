<h1>Task Details</h1>

<p><%= @task.title %></p>
<p><%= @task.details %></p>
<p><%= @task.completed %></p>

<%= link_to "Back to tasks", tasks_path %>
<%= link_to "Edit task", edit_task_path(@task) %>
<%= link_to task_path(@task), method: :delete do %>
  <i class="fa fa-trash" aria-hidden="true"></i>
<% end %>
